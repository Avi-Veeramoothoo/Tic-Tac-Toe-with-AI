# initialize an empty board 
board =[["_", "_", "_"],
         ["_", "_", "_"],
         ["_", "_", "_"]]

# print the board
def print_board(board):
    print('---------')
    for row in board:
        print('| ', end='')
        print(' '.join(row), end='')
        print(' |')
    print('---------')

# set a new board template with input user provides 
def set_board(board):
    user_board = input("Enter cells:")
    for i in range(3):
         for j in range(3):
                  board[j][i] = user_board[i + 3 * j]
    return board
